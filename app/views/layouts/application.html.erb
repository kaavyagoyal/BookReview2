<!DOCTYPE html>
<html>
  <head>
    <title>Book Review</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% if notice %>
     <p class="alert alert-success"><%= notice %></p>
    <% end %>
   <% if alert %>
     <p class="alert alert-danger"><%= alert %></p>
   <% end %>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">BOOK REVIEW</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/books">Books</a>
            </li>
          </ul>
          <span class="navbar-text">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <a class="nav-link" href="/users/sign_out" data-method="delete">Sign Out</a>
                </li>
              <% else %>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/users/sign_up">Sign Up</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/users/sign_in">Sign In</a>
                </li>
              <% end %>
            </ul>
          </span>
        </div>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container container-fluid">
      <%= yield %>
    </div>
  </body>
</html>










