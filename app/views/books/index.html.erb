<h1>
 <%= link_to "New Book", "/books/new", class: "btn btn-primary float-end" %>
</h1>
<div class="row">
 <% @books.each do |book| %>
  <div class="col-md-12">
   <div class="card" style="margin: 15px;">
   <div class="card-body">
    <h2 class="card-title"><%= link_to book.title, book_path(book.id) %></h2>
    <p class="card-text"><%= book.description %></p>
    <h4 class="card-title"><%= book.author %></h4>
  </div>
  </div>
</div>  
<% end %>